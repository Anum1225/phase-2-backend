# ============================================================================
# Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it's in .gitignore

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================
# Neon PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
#
# Get from: https://console.neon.tech (Connection Details)
# Example: postgresql://user:pass@ep-cool-name-123456.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=psql 'postgresql://neondb_owner:npg_p7umtUsZckD6@ep-bitter-shadow-aixb0dsf-pooler.c-4.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require'

# ============================================================================
# JWT AUTHENTICATION SECRET (REQUIRED)
# ============================================================================
# Secret key for signing and verifying JWT tokens
# CRITICAL: This must match the secret used by Better Auth in the frontend
#
# Requirements:
# - Minimum 32 characters (stronger is better)
# - Use cryptographically secure random string
# - NEVER reuse across environments (dev/staging/prod)
# - Rotate periodically in production
#
# Generate with:
#   openssl rand -base64 32  (Linux/Mac)
#   python -c "import secrets; print(secrets.token_urlsafe(32))"  (Python)
#
# Example: 7x9K2mP4nQ8vR3wT6yU9zL5cF8hJ1kN4pS7xA0bD3eG6iM2oQ5r
BETTER_AUTH_SECRET=your-secret-key-here-min-32-characters

# ============================================================================
# CORS ORIGINS (REQUIRED)
# ============================================================================
# Comma-separated list of allowed frontend origins for CORS
#
# Development (local frontend):
#   CORS_ORIGINS=http://localhost:3000
#
# Multiple origins:
#   CORS_ORIGINS=http://localhost:3000,http://localhost:3001
#
# Production (HTTPS only):
#   CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
#
# Production with Vercel frontend:
#   CORS_ORIGINS=https://your-vercel-project.vercel.app,https://hackathon-2-iota-three.vercel.app
#
# WARNING: Never use "*" in production - it disables CORS protection
CORS_ORIGINS=http://localhost:3000,https://hackathon-2-iota-three.vercel.app

# ============================================================================
# JWT CONFIGURATION (OPTIONAL)
# ============================================================================
# JWT token algorithm (default: HS256)
# Options: HS256 (symmetric), RS256 (asymmetric with public/private keys)
# JWT_ALGORITHM=HS256

# JWT token expiration time in hours (default: 24 hours)
# After this time, users must sign in again
# JWT_EXPIRATION_HOURS=24

# ============================================================================
# SERVER CONFIGURATION (OPTIONAL)
# ============================================================================
# Server host address (default: 0.0.0.0 = all interfaces)
# Use 127.0.0.1 for localhost-only access
# HOST=0.0.0.0

# Server port (default: 8000)
# PORT=8000

# ============================================================================
# DATABASE CONNECTION POOL (OPTIONAL)
# ============================================================================
# Connection pool size for database (default: 5)
# Increase for high-traffic applications
# DB_POOL_SIZE=5

# Maximum overflow connections beyond pool size (default: 10)
# DB_MAX_OVERFLOW=10

# ============================================================================
# LOGGING (OPTIONAL)
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# LOG_LEVEL=INFO

# Enable SQL query logging (default: false)
# WARNING: Logs may contain sensitive data - use only in development
# SQL_ECHO=false

